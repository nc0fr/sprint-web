root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space
max_line_length = 80

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.md]
max_line_length = 72

[*.txt]
max_line_length = 72
